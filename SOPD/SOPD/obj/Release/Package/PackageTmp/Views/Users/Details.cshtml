@model SOPD.Models.EditAccountViewModel

@{
    ViewBag.Title = "Dane użytkownika";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Dane użytkownika</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.NewUser.OrganizationalUnit.UnitName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NewUser.OrganizationalUnit.UnitName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.NewUser.FirstName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NewUser.FirstName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.NewUser.LastName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NewUser.LastName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.NewUser.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NewUser.Email)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.NewUser.PhoneNumber)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NewUser.PhoneNumber)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.NewUser.UserName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NewUser.UserName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.NewUser.Roles)
        </dt>
            @foreach(var r in Model.RolesNames)
            {
                <dd>
                    @Html.Label("*") @r
                </dd>

            }
     
    </dl>
</div>

<p>


    @if (User.Identity.IsAuthenticated)
    {
        if (User.IsInRole("Administrator"))
        {
            @Html.ActionLink("Powrót do listy", "Index", null, new { @class = "btn btn-primary" })
            @Html.ActionLink("Edytuj", "Edit", new { id = Model.NewUser.Id }, new { @class = "btn btn-default" })
        }
        if (User.IsInRole("Dyplomant") && ViewBag.isPromoter == true)
        {
            @Html.ActionLink("Powrót do listy", "Promoters", null, new { @class = "btn btn-primary" })
            @Html.ActionLink("Dodaj propozycję tematu", "CreateProposition", "Theses", new { id = Model.NewUser.Id }, new { @class = "btn btn-info" })
        }
    }


</p>
