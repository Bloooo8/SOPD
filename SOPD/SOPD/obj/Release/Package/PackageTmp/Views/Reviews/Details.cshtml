@model SOPD.Models.Review

@{
    ViewBag.Title = "Szczegóły recenzji";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Szczegóły recenzji</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.UserID)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Author.FullName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Thesis.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Thesis.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Content)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Content)
        </dd>

    </dl>
</div>
<p>
    @if (ViewBag.canReview == true)
    {
        @Html.ActionLink("Edytuj", "Edit", new { id = Model.ReviewID }, new { @class = "btn btn-default" })
    }
    @Html.ActionLink("Powrót do pracy", "Details", "Theses", new { id = Model.ThesisID }, new { @class = "btn btn-primary" })
</p>
